<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-3">
      <h3 class="bg-light text-center mt-5 mb-5">投稿履歴詳細</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <h5 class="col-3 mt-2">投稿情報</h5>
      <table class="table table-bordered w-100">
        <tr>
          <td>
            <% if @post.image.attached? %>
              <%= image_tag @post.image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th class="table-secondary col-3">投稿日</th>
          <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="table-secondary col-3">投稿文</th>
          <td><%= @post.caption %></td>
        </tr>
        
      </table>
    </div>
    
  </div>
  <div class="row mb-5">
    <div class="col-9">
      

    <div class="row text-algin-left">
    <div class="col-2">
      <%= link_to "編集する", edit_customer_post_path, :class => "btn btn-success" %>
    </div>
  </div>
    </div>
  </div>
</div>