<div class="container my-5">
  <div class="row">
    <h3 class="bg-light mt-4 ml-5 mb-5 text-center">投稿履歴一覧</h3>
  </div>
  <div class="row text-right">
    <%= link_to "+", new_customer_post_path, class: "btn btn-lg rounded-circle text-right ml-auto shadow-sm" %>
  </div>

  <div class="row mt-1">
    <table class="table table-hover text-center">
      <thead>
        <tr class="table-secondary text-algin-left">
          <th>投稿日</th>
          <th>投稿写真</th>
          <th>投稿文</th>

        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <td><%= post.id %></td>
        <td>
          <%= link_to customer_post_path(post.id) do %>
          <% end %>
        </td>
        <td><%= post.caption %></td>

      </tbody>
      <% end %>
    </table>
  </div>
</div>