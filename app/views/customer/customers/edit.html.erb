<div class="container">
  <div class="row">

 <div class="col-9">
   <br>
  <div class="row text-center">
    <h3 class="bg-light col-lg-4 mb-5  mt-4">ユーザ情報編集</h3>
  </div>

  <%= form_with model: @customer, url: customer_mypage_path(@customer.id), method: :patch do |f| %>

  <div class="form-group row">
    <label for="text" class="col-lg-3">ユーザ名</label>
    <%= f.text_field :name, :class => "col-lg-3 mr-5" %>
  </div>

  <div class="form-group row">
    <label for="text" class="col-lg-3">メールアドレス</label>
    <%= f.text_field :email, :class => "col-lg-3" %>
  </div>

  <div class="form-group row">
  <label for="inputImage">ユーザ画像</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>

  <div class="form-group row">
    <div class="col-lg-3"></div>
    <%= f.submit "編集内容を保存", :class => "btn btn-success col-lg-2 mb-5 mt-3 mr-5" %>

  </div>
  <% end %>
  </div>
</div>
</div>