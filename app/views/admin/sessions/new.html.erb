<div class="container m-4 mx-auto">
  <div class="row">
    <h3 class="bg-light mb-4">管理者ログイン</h3>
  </div>
<%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="form-group row">
    <div class="col-lg-2"></div>
    <div class="col-lg-2 col-form-label">
    <%= f.label :email, "メールアドレス" %>
    </div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "col-lg-5", :placeholder => "sample@example.com" %>
  </div>

  <div class="form-group row">
    <div class="col-lg-2"></div>
    <div class="col-lg-2 col-form-label">
    <%= f.label :password, "パスワード" %>
    </div>
    <%= f.password_field :password, autocomplete: "current-password", :class => "col-lg-5" %>
  </div>

    <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end %>
  <br>

  <div class="form-group row">
    <div class="col-lg-2"></div>
    <div class="col-lg-2"></div>
    <%= f.submit "ログイン", :class => "btn btn-primary col-lg-2 mb-3" %>
  </div>
  <% end %>

</div>

<%= render "admin/shared/links" %>